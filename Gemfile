source 'https://rubygems.org'

# Ruby duh!!
ruby '2.0.0'

# simple DSL router
gem 'sinatra'

# Fast server
gem 'puma'

# faster erb
gem 'erubis'

# asset pipeline
gem 'sprockets'
# for sprockets sass integration
gem 'sprockets-sass'
gem 'sass'

# cool mixins
gem 'bourbon'
# nice semantic grid
gem 'neat'

# parse psd files
gem 'psd'

# reloads sinatra when files change
group :development do
  gem 'shotgun'
end