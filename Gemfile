source 'https://rubygems.org'

# Ruby duh!!
ruby '2.1.0'

# simple DSL router
gem 'sinatra'

# Fast server
gem 'puma'

# cool mixins
gem 'bourbon', '~> 3.1.8'
# nice semantic grid
gem 'neat', '~> 1.5.0'

# parse psd files
gem 'psd', '~> 2.0.0'

# reloads sinatra when files change
group :development do
  gem 'shotgun'
end