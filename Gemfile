source 'https://rubygems.org'

# Ruby duh!!
ruby '2.0.0'

# simple DSL router
gem 'sinatra'

# Fast server
gem 'thin'

# asset pipeline
gem 'sinatra-assetpack', :require => 'sinatra/assetpack'
gem 'sass'

# cool mixins
gem 'bourbon'
# nice semantic grid
gem 'neat'

# parse psd files
gem 'psd'

# reloads sinatra when files change
group :development do
  gem 'shotgun'
end