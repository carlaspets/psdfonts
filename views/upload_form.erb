<form class="upload-form" name="psd-form" action="/results" method="POST" enctype="multipart/form-data">

	<%= erb :errors %> 

	<fieldset>
		<button class="upload-form__btn--dropbox btn" id="js-file-dropbox">choose from dropbox</button>
		<input type="hidden" id="js-dropbox-field" name="dropbox_file">

		<button class="upload-form__btn--submit btn">upload</button>
		
		<div class="faded-out upload-form__file-actions">
			<p class="upload-form__file-name" id="js-file-name"></p>
			<a href="/" class="start-again btn"><i></i> start over?</a>
		</div> <!--  .faded-out upload-form__file-actions -->
	</fieldset>

</form>
