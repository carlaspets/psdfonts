<div class="container">
<%= erb :header %>
<% if @singleFonts.empty? %>
	<div class="no-fonts">
		<p class="no-fonts__text">Ruh-roh! Looks like there weren't any fonts in that PSD.</p> <!--  .no-fonts -->
		<a href="/" class="start-again btn"><i class="spin"></i> start over?</a>
	</div> <!--  .no-fonts -->
<% else %>

	<h2>Here are all the fonts we found from your psd, if there is a bug for whatever reason please file an issue at <a href="https://github.com/samjbmason/psdfonts">GitHub.</a></h2>


	<div class="font-list">

	<% @singleFonts.each do |font| %>
		<div class="font-list__single-font">
			<p class="font-list__name">
				<%= font %>
			</p>
			<a class="font-list__buy-font btn" target="_blank" href="<%= purchase_link(font) %>">Buy @ MyFonts</a>
		</div> <!--  .font-list__single-font -->
	<% end %>

	</div> <!--  .font-list -->

	<div class="result-actions">
		<button id="js-copy-btn" class="copy-fonts btn" data-clipboard-text="<%= partial :clipboard_copy, :singleFonts => @singleFonts %>">copy to clipboard</button>
		<a href="/" class="start-again btn">start over?</a>
	</div> <!--  .all-of-the-extras -->

<% end %>
</div> <!--  .container -->